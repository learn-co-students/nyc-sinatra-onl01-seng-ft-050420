<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch" />
  <table>
    <tr>
      <th>Name</th>
      <th>Year Completed</th>
    </tr>
    <tr>
      <td><input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>" /></td>
      <td><input type="text" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed %>" /></td>
    </tr>
  <table>

  <input type="submit" value="Edit Landmark" />

</form>



<a class="button" href="/landmarks/<%= @landmark.id %>/edit">Edit Landmark</a>
<a class="button" href="/landmarks">Landmarks</a>

