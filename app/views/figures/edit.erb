<h2>Edit Historical Figure</h2>
<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch" />

  <label for="figure_name">Edit Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>" />

  <br>

  <h3>Edit Titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %><br>
  <% end %>

  <br>

  <label for="new_title">Create New Title: </label><br>
  <input type="text" name="title[name]" id="new_title" />

  <br>

  <h3>Edit Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
  <% end %>

  <br>

  <h3>Create New Landmark: </h3>

  <label for="new_landmark">Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark" />
  <label for="landmark_year">Year: </label>
  <input type="text" name="landmark[year_completed]" id="landmark_year" />

  <input type="submit" value="Edit Figure" />

</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>