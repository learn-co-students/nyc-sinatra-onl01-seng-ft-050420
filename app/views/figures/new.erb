<form method="POST" action="/figures">
    <input type="text" name="figure[name]" id="figure_name">

    <% Title.all.each do |x| %>
        <label><%= x.name %></label>
        <input type="checkbox" name="figure[title_ids][]" value="<%=x.id%>" id="title_<%=x.id%>">
    <% end %>

    <% Landmark.all.each do |x| %>
        <label><%= x.name %></label>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%=x.id%>" id="landmark_<%=x.id%>">
    <% end %>

    <input type="text" name="landmark[name]" id="new_landmark">

    <input type="text" name="title[name]">

    <input type="text" name="title[name]" id="new_title">

    <input type="submit" value="Create New Figure">
</form>